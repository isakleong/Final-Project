<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="10dp">

                <ImageView
                    android:id="@+id/icon_aspirasi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cobaya"
                    />
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aspirasi sedang diproses"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="7dp"/>
                <TextView
                    android:id="@+id/txtTglAspirasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tgl aspirasi dibuat"
                    android:textSize="12sp"
                    android:textColor="#9e9e9e"
                    android:layout_marginBottom="7dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="7dp">
                    <TextView
                        android:id="@+id/headerBiroUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biro / Unit: "
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="#9e9e9e"/>
                    <TextView
                        android:id="@+id/txtBiroUnit"
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Biro / Unit"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="#9e9e9e"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_gravity="right">
                    <TextView
                        android:id="@+id/headerDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail History"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:textColor="#01AB6D"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>